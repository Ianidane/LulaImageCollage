{
  "name": "RoeLage",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "notifications"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    }
  },
  "icons": {
    "128": "images/Icon.png"
  }
}
